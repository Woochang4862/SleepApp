<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:background="@color/white"
                android:layout_height="match_parent">
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="17.2sp"
            android:textColor="#1b7fff"
            android:textStyle="bold"
            android:layout_margin="20dp"
            android:id="@+id/title"
            android:text="숙면을 위한 가이드"
    />

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15.2sp"
            android:textColor="#1b7fff"
            android:id="@+id/subTitle"
            android:layout_alignLeft="@id/title"
            android:layout_below="@id/title"
            android:text="침대"
    />

    <View android:layout_width="47.3dp" android:layout_height="1.7dp"
          android:layout_below="@id/subTitle"
          android:layout_alignLeft="@id/subTitle"
          android:background="#1b7fff"
          android:layout_marginBottom="40dp"
          android:id="@+id/horizontalLine"/>

    <androidx.recyclerview.widget.RecyclerView android:layout_width="match_parent"
                                               android:id="@+id/menuList"
                                               android:layout_below="@id/horizontalLine"
                                               android:layout_height="wrap_content"/>

</RelativeLayout>