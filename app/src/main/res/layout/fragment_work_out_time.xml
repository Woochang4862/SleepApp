<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:background="@drawable/bg_add_work_out"
                android:layout_height="match_parent">

    <ImageView android:layout_width="wrap_content" android:layout_height="wrap_content"
               android:src="@drawable/ic_arrow_back" android:id="@+id/backBtn" android:layout_margin="16dp"
               android:contentDescription="backBtn"/>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:id="@+id/title"
            android:layout_marginBottom="66.3dp"
            android:layout_marginTop="74dp"
            android:layout_marginLeft="61dp"
            android:text="시간대"/>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="31.8sp"
            android:id="@+id/workOutStartTime"
            android:background="?attr/selectableItemBackground"
            android:textColor="#000000"
            android:layout_below="@id/title"
            android:layout_marginBottom="38.7dp"
            android:layout_alignLeft="@id/title"
            android:text="08:00"/>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="31.8sp"
            android:id="@+id/workOutTime"
            android:textColor="#000000"
            android:layout_below="@id/title"
            android:layout_toRightOf="@id/workOutStartTime"
            android:layout_marginBottom="38.7dp"
            android:text=" ~ "/>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/workOutTime"
            android:textSize="31.8sp"
            android:id="@+id/workOutEndTime"
            android:background="?attr/selectableItemBackground"
            android:textColor="#000000"
            android:layout_below="@id/title"
            android:layout_marginBottom="38.7dp"
            android:text="09:00"/>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:id="@+id/saveBtn"
            android:layout_below="@id/workOutTime"
            android:layout_alignRight="@id/workOutEndTime"
            android:text="완료"/>
</RelativeLayout>