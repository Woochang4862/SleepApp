<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/dismissLayout"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white"
                android:textAllCaps="false">

    <TextClock
            android:id="@+id/text_clock_dismiss"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:elevation="10dp"
            android:format12Hour="hh:mm"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:format24Hour="k:mm"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:textColor="#FFEB3B"
            android:textSize="40dp"
            android:fontFamily="sans-serif-thin"/>

    <ImageView android:layout_width="match_parent" android:layout_height="match_parent" android:layout_alignParentTop="true" android:src="#cb4a45"
    android:layout_above="@id/button_area"/>

    <LinearLayout android:layout_width="match_parent" android:layout_height="70dp"
                  android:layout_gravity="bottom"
                  android:id="@+id/button_area"
                  android:layout_alignParentBottom="true"
                  android:gravity="center"
                  android:orientation="horizontal">
        <Button
                android:id="@+id/button_dismiss_alarm"
                android:layout_width="0dp"
                android:background="@android:color/transparent"
                android:textSize="30sp"
                android:text="X"
                android:textAllCaps="false"
                android:layout_weight="1"
                android:textColor="#cb4a45"
                android:layout_height="match_parent"
        />
        <Button
                android:id="@+id/button_success_alarm"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:textSize="30sp"
                android:text="O"
                android:textAllCaps="false"
                android:textColor="#8BC34A"
                android:layout_height="match_parent"
        />
    </LinearLayout>
</RelativeLayout>